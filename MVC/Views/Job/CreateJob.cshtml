@model DataAccessLayer.Models.Job

<h2>Create Job</h2>

<h4>Job</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Place)
        @Html.TextBoxFor(model => model.Place, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Place)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Department)
        @Html.TextBoxFor(model => model.Department, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Department)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CompanyID, "Company")
        @Html.DropDownListFor(model => model.CompanyID, (SelectList)ViewBag.Company, "Select a company", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CompanyID)
    </div>



    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}